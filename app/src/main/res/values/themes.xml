<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.COLLECTION" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_taupe</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Dialog Corner. -->
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:calendarViewStyle">@style/MyDatePickerStyle</item>
    </style>
    <style name="MyDatePickerStyle" parent="android:Widget.CalendarView">
        <item name="android:textColorPrimary">#FFAACF</item>
        <item name="android:textColorSecondary">#DA0303</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
<!--        <item name="android:weekDayTextAppearance">@style/CustomCalendarWeek</item>-->
        <item name="android:dateTextAppearance">@style/CustomCalendarDay</item>
        <item name="selectableItemBackgroundBorderless">@color/purple_200</item>
    </style>

</resources>