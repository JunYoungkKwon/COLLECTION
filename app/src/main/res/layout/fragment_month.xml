<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_bg_monthly"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/month_btn_setting_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_setting_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/month_btn_rank_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_rank_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/month_btn_write_iv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_write"
        android:paddingTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/month_top_line_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/month_btn_setting_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="1px"
        android:layout_height="64dp"
        android:background="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/month_btn_setting_iv" />

    <View
        android:layout_width="1px"
        android:layout_height="64dp"
        android:background="@color/black"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/month_btn_rank_iv"/>

    <View
        android:id="@+id/month_bottom_line_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="27dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/month_top_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/month_calendar1_line_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="105dp"
        app:layout_constraintTop_toBottomOf="@id/month_bottom_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black" />

    <View
        android:id="@+id/month_calendar2_line_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="105dp"
        app:layout_constraintTop_toBottomOf="@id/month_calendar1_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black" />

    <View
        android:id="@+id/month_calendar3_line_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="105dp"
        app:layout_constraintTop_toBottomOf="@id/month_calendar2_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black" />

    <View
        android:id="@+id/month_calendar4_line_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="105dp"
        app:layout_constraintTop_toBottomOf="@id/month_calendar3_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black" />

    <View
        android:id="@+id/month_calendar5_line_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="105dp"
        app:layout_constraintTop_toBottomOf="@id/month_calendar4_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black" />

    <com.kizitonwose.calendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cv_scrollMode="paged"
        app:cv_orientation="horizontal"
        app:cv_hasBoundaries="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cv_monthHeaderResource="@layout/calendar_year_month_header"
        app:cv_dayViewResource="@layout/calendar_date" />

</androidx.constraintlayout.widget.ConstraintLayout>