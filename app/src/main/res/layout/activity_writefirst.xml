<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <ImageView
            android:id="@+id/writefirst_background_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/img_bg_writepage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/writefirst_background_Perpendicularline_first_v"
            android:layout_width="1dp"
            android:layout_height="88dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_iv"
            android:layout_marginStart="48dp">
        </View>

        <View
            android:id="@+id/writefirst_background_Perpendicularline_second_v"
            android:layout_width="1dp"
            android:layout_height="88dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/writefirst_background_iv"
            android:layout_marginEnd="48dp"
            >
        </View>


        <View
            android:id="@+id/writefirst_background_Perpendicularline_third_v"
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toBottomOf="@id/writefirst_background_horizontalline_first_v"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_iv"
            android:layout_marginStart="200dp"
            >
        </View>

        <View
            android:id="@+id/writefirst_background_Perpendicularline_fourth_v"
            android:layout_width="1dp"
            android:layout_height="240dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toBottomOf="@id/writefirst_background_horizontalline_second_v"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_iv"
            android:layout_marginStart="48dp"
            >
        </View>

        <View
            android:id="@+id/writefirst_background_Perpendicularline_fifth_v"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toTopOf="@id/writefirst_background_iv"
            app:layout_constraintBottom_toBottomOf="@id/writefirst_background_iv"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_iv"
            >
        </View>

        <View
            android:id="@+id/writefirst_background_Perpendicularline_sixth_v"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/pinkish_grey"
