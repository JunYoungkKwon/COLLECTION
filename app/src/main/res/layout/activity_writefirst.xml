            android:layout_height="240dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_Perpendicularline_fourth_v"
            app:layout_constraintEnd_toEndOf="@id/writefirst_background_iv"
            app:layout_constraintTop_toTopOf="@id/writefirst_background_horizontalline_second_v"
            android:layout_marginStart="1dp"
            tools:listitem="@layout/item_writefirst_photo"/>

        <ImageView
            android:id="@+id/writefirst_add_photo_iv"
            android:layout_width="216dp"
            android:layout_height="216dp"
            app:layout_constraintTop_toTopOf="@id/writefirst_photo_recyclerview"
            app:layout_constraintBottom_toBottomOf="@id/writefirst_photo_recyclerview"
            app:layout_constraintStart_toStartOf="@id/writefirst_photo_recyclerview"
            android:layout_marginStart="13dp"
            />

        <ImageView
            android:id="@+id/writefirst_add_photo_iv2"
