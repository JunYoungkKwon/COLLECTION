            app:layout_constraintBottom_toBottomOf="@id/writefirst_header_iv"
            app:layout_constraintEnd_toEndOf="@id/writefirst_background_iv"/>

        <TextView
            android:id="@+id/writefirst_datetext_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
