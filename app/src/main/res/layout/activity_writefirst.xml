            style="@style/VlanLlaRegular4Pt"
            app:layout_constraintStart_toStartOf="@id/writefirst_phototext_tv"
            app:layout_constraintTop_toTopOf="@id/writefirst_background_horizontalline_first_v"
            app:layout_constraintBottom_toBottomOf="@id/writefirst_background_horizontalline_second_v"
            />

        <TextView
            android:id="@+id/writefirst_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022/02/12"
