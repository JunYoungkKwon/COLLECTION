            android:layout_width="0dp"
            android:layout_height="240dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_Perpendicularline_fourth_v"
            app:layout_constraintEnd_toEndOf="@id/writefirst_background_iv"
            app:layout_constraintTop_toTopOf="@id/writefirst_background_horizontalline_second_v"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/writefirst_photo_default_image1"
                android:layout_width="215dp"
                android:layout_height="215dp"
                android:src="@drawable/camera_bg_01"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/writefirst_photo_default_image2"
                android:layout_width="215dp"
                android:layout_height="215dp"
                android:src="@drawable/camera_bg_01"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:visibility="visible"
                />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
