            android:layout_height="216dp"
            app:layout_constraintTop_toTopOf="@id/writefirst_add_photo_iv"
            app:layout_constraintBottom_toBottomOf="@id/writefirst_add_photo_iv"
            app:layout_constraintStart_toEndOf="@id/writefirst_add_photo_iv"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="1dp"
            />


        <com.google.android.material.tabs.TabLayout
