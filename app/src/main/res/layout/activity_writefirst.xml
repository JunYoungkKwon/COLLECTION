            android:fontFamily="@font/suit_regular"
            android:textSize="14sp"
            android:textColor="@color/dark_taupe"
            android:letterSpacing="-0.01"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_Perpendicularline_third_v"
            app:layout_constraintTop_toTopOf="@id/writefirst_datetext_tv"
            app:layout_constraintBottom_toBottomOf="@id/writefirst_datetext_tv"
            app:layout_constraintEnd_toEndOf="@id/writefirst_refresh_iv"
            android:layout_marginStart="20dp"
            android:autoText="false"
            tools:ignore="Deprecated" />


        <com.eight.collection.utils.CustomTextView
            android:id="@+id/writefirst_phototext_tv"
            style="@style/VlanLlaRegular4Pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:rotation="180"
            android:text="PHOTO."
            app:layout_constraintStart_toStartOf="@id/writefirst_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writefirst_background_Perpendicularline_fourth_v"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass" />

