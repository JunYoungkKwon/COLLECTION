            app:layout_constraintStart_toEndOf="@id/writefirst_datetext_tv"
            app:layout_constraintTop_toTopOf="@id/writefirst_datetext_tv"
            android:layout_marginStart="20dp"
            />

        <ImageView
            android:id="@+id/writefirst_date_selector_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_selector"
