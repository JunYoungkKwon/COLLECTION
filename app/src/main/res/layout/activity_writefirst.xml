            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/writefirst_color_top_color_icon_iv"
            app:layout_constraintTop_toBottomOf="@id/writefirst_color_tb"
            android:layout_marginTop="17dp"
            />

        <TextView
            android:id="@+id/writefirst_select_02_tv"
            android:text="(필수선택)"
