            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/writefirst_select_01_tv"
            app:layout_constraintTop_toBottomOf="@id/writefirst_color_tb"
            android:layout_marginTop="17dp"
            />

        <TextView
