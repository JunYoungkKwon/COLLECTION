            android:id="@+id/writefirst_color_shadow_v"
            android:layout_width="326dp"
            android:layout_height="9dp"
            android:background="#f4f2f0"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_horizontalline_third_v"
            app:layout_constraintTop_toTopOf="@id/writefirst_background_horizontalline_third_v"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            />-->

        <LinearLayout
