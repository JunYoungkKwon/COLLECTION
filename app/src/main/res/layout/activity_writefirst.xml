            app:layout_constraintBottom_toBottomOf="@id/writefirst_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writefirst_background_iv"
            >
        </View>

        <View
            android:id="@+id/writefirst_background_horizontalline_first_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toBottomOf="@id/writefirst_background_Perpendicularline_first_v"
            app:layout_constraintStart_toStartOf="@id/writefirst_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writefirst_background_iv"
            >
        </View>

        <View
            android:id="@+id/writefirst_background_horizontalline_second_v"
