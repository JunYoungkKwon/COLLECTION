<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/writesecond_background_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/img_bg_writepage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <View
            android:id="@+id/writesecond_background_Perpendicularline_first_v"
            android:layout_width="1dp"
            android:layout_height="88dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            android:layout_marginStart="48dp">
        </View>

        <View
            android:id="@+id/writesecond_background_Perpendicularline_second_v"
            android:layout_width="1dp"
            android:layout_height="88dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            android:layout_marginEnd="48dp"
            >
        </View>

        <View
            android:id="@+id/writesecond_background_Perpendicularline_fifth_v"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toTopOf="@id/writesecond_background_iv"
            app:layout_constraintBottom_toBottomOf="@id/writesecond_background_iv"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            >
        </View>

        <View
            android:id="@+id/writesecond_background_Perpendicularline_sixth_v"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toTopOf="@id/writesecond_background_iv"
            app:layout_constraintBottom_toBottomOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            >
        </View>

        <View
            android:id="@+id/writesecond_background_horizontalline_first_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toBottomOf="@id/writesecond_background_Perpendicularline_first_v"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv">
        </View>

        <View
            android:id="@+id/writesecond_header_background_iv"
            android:layout_width="178dp"
            android:layout_height="10dp"
            android:background="@color/light_peach"
            app:layout_constraintBottom_toBottomOf="@id/writesecond_header_iv"
            app:layout_constraintStart_toStartOf="@id/writesecond_header_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_header_iv"
            >
        </View>

        <ImageView
            android:id="@+id/writesecond_header_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:src="@drawable/today_s_ootd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/writesecond_refresh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reset"
            app:layout_constraintTop_toTopOf="@id/writesecond_header_iv"
            app:layout_constraintBottom_toBottomOf="@id/writesecond_header_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            />



        <com.google.android.material.tabs.TabLayout
            android:id="@+id/writesecond_tb"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorGravity="top"
            app:tabIndicatorColor="@color/dark_taupe"
            app:tabIndicator="@drawable/ic_padding_indicator2"
            app:tabSelectedTextColor="@color/dark_taupe"
            app:tabTextAppearance="@style/Tab_text2"
            app:tabTextColor="#C3B5AC"
            app:tabRippleColor="#00ff0000"
            app:tabPaddingTop="18dp"
            android:background="@drawable/img_bg_writepage"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="89dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            />

        <TextView
            android:id="@+id/writesecond_select_01_tv"
            android:text="*"
            android:textColor="@color/dark_taupe"
            android:fontFamily="@font/suit_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_horizontalline_fifth_v"
            app:layout_constraintTop_toBottomOf="@id/writesecond_tb"
            android:layout_marginTop="17dp"
            android:layout_marginStart="2dp"
            />

        <TextView
            android:id="@+id/writesecond_select_02_tv"
            android:text="(추가선택)"
            android:textColor="@color/dark_taupe"
            android:fontFamily="@font/suit_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/writesecond_select_01_tv"
            app:layout_constraintTop_toBottomOf="@id/writesecond_tb"
            android:layout_marginTop="17dp"
            />

        <TextView
            android:id="@+id/writesecond_select_03_tv"
            android:text="장소,날씨,사람을 선택해주세요."
            android:textColor="@color/dark_taupe"
            android:fontFamily="@font/suit_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/writesecond_select_02_tv"
            app:layout_constraintTop_toBottomOf="@id/writesecond_tb"
            android:layout_marginTop="17dp"
            />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/writesecond_vp"
            android:layout_width="328dp"
            android:layout_height="214dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/writesecond_tb"
            android:layout_marginTop="20dp"
            />

        <View
            android:id="@+id/writesecond_background_horizontalline_second_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/terracota"
            app:layout_constraintTop_toBottomOf="@id/writesecond_tb"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv">
        </View>


        <View
            android:id="@+id/writesecond_background_horizontalline_third_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toBottomOf="@id/writesecond_vp"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="63dp"
            >
        </View>

        <View
            android:id="@+id/writesecond_background_horizontalline_fourth_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toBottomOf="@id/writesecond_background_horizontalline_third_v"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >
        </View>

        <ImageView
            android:id="@+id/writesecond_lookpoint_text_ic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_writepage_indicater"
            app:layout_constraintBottom_toBottomOf="@id/writesecond_background_horizontalline_fourth_v"
            app:layout_constraintEnd_toStartOf="@id/writesecond_lookpoint_text_tv"
            app:layout_constraintTop_toTopOf="@id/writesecond_background_horizontalline_third_v"
            android:layout_marginEnd="4dp"
            />

        <ImageView
            android:id="@+id/writesecond_lookpoint_text_ic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_writepage_indicater"
            app:layout_constraintBottom_toBottomOf="@id/writesecond_background_horizontalline_fourth_v"
            app:layout_constraintStart_toEndOf="@id/writesecond_lookpoint_text_tv"
            app:layout_constraintTop_toTopOf="@id/writesecond_background_horizontalline_third_v"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/writesecond_lookpoint_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOOK POINT."
            style="@style/VlanLlaRegular5Pt"
            app:layout_constraintTop_toTopOf="@id/writesecond_background_horizontalline_third_v"
            app:layout_constraintBottom_toBottomOf="@id/writesecond_background_horizontalline_fourth_v"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.hedgehog.ratingbar.RatingBar
            android:id="@+id/writesecond_lookpoint_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:clickable="true"
            android:numStars="5"
            android:rating="1"
            android:stepSize="1"
            hedgehog:starImageHeight="26dp"
            hedgehog:starImageWidth="27dp"
            hedgehog:starEmpty="@drawable/ic_lookpoint_empty"
            hedgehog:starFill="@drawable/ic_lookpoint_fill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/writesecond_background_horizontalline_fourth_v"
            android:layout_marginTop="16dp"
            />

        <View
            android:id="@+id/writesecond_background_horizontalline_fifth_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/pinkish_grey"
            app:layout_constraintTop_toBottomOf="@id/writesecond_lookpoint_ratingbar"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >
        </View>

        <EditText
            android:id="@+id/writesecond_comment_et"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#E5DDD8"
            android:gravity="top"
            android:hint="오늘 룩에 대한 코멘트를 달아보세요!!"
            android:textColorHint="#c1b5ad"
            android:privateImeOptions="defaultInputmode=korean"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/dark_taupe"
            android:textSize="12sp"
            android:fontFamily="@font/suit_regular"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_horizontalline_fifth_v"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_horizontalline_fifth_v"
            app:layout_constraintTop_toBottomOf="@id/writesecond_background_horizontalline_fifth_v" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/writesecond_finish_button2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/writesecond_finish_btn_event"
            android:textColor="#7C6350"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/writesecond_comment_et"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            android:layout_marginTop="48dp"
            android:layout_marginStart="96dp"
            android:layout_marginEnd="96dp"
            />


        <View
            android:id="@+id/writesecond_zigzagline_v"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginBottom="136dp"
            android:background="@drawable/zigzagline_writefirst"
            app:layout_constraintStart_toStartOf="@id/writesecond_background_iv"
            app:layout_constraintEnd_toEndOf="@id/writesecond_background_iv"
            app:layout_constraintTop_toBottomOf="@id/writesecond_finish_button2"
            android:layout_marginTop="40dp"
            />

        <ImageView
            android:id="@+id/writesecond_space_iv"
            android:layout_width="328dp"
            android:layout_height="155dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/writesecond_zigzagline_v"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>






