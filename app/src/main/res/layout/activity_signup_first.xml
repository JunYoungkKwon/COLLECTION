<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_matchpage"
    >

    <ImageView
        android:id="@+id/sign_up_first_ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/sign_up_first_signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textStyle="normal"
        android:textColor="@color/dark_taupe"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/sign_up_first_ic_back"
        app:layout_constraintTop_toTopOf="@id/sign_up_first_ic_back"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_first_ic_back"
        android:letterSpacing="-0.01"
        android:layout_marginStart="8dp"
        />

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_light"
        android:textStyle="normal"
        android:textSize="32sp"
        android:textColor="@color/terracota"
        android:letterSpacing="-0.01"
        android:text="약관동의"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_first_signup_tv"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        />


    <ImageView
        android:id="@+id/sign_up_first_check_first_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_click_uncheck"
        app:layout_constraintTop_toBottomOf="@id/sign_up_first_ic_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="112dp"
        android:layout_marginStart="34dp"/>

    <TextView
        android:id="@+id/sign_up_first_agree_first_tv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr"
        android:gravity="top"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/dark_taupe"
        android:letterSpacing="-0.01"
        android:text="개인정보 수집제공 동의(필수)"
        app:layout_constraintStart_toEndOf="@id/sign_up_first_check_first_iv"
        app:layout_constraintTop_toTopOf="@id/sign_up_first_check_first_iv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_first_check_first_iv"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_up_first_agree_first_tv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_first_agree_first_tv"
        android:layout_marginEnd="33dp"/>

    <ImageView
        android:id="@+id/sign_up_first_check_second_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_click_uncheck"
        app:layout_constraintTop_toBottomOf="@id/sign_up_first_ic_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="148dp"
        android:layout_marginStart="34dp"/>

    <TextView
        android:id="@+id/sign_up_first_agree_second_tv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr"
        android:gravity="top"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/dark_taupe"
        android:letterSpacing="-0.01"
        android:text="약관동의(필수)"
        app:layout_constraintStart_toEndOf="@id/sign_up_first_check_second_iv"
        app:layout_constraintTop_toTopOf="@id/sign_up_first_check_second_iv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_first_check_second_iv"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_up_first_agree_second_tv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_first_agree_second_tv"
        android:layout_marginEnd="33dp"/>


    <ImageView
        android:id="@+id/sign_up_first_check_third_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_click_uncheck"
        app:layout_constraintTop_toBottomOf="@id/sign_up_first_ic_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="184dp"
        android:layout_marginStart="34dp"/>

    <TextView
        android:id="@+id/sign_up_first_agree_third_tv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr"
        android:gravity="top"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/dark_taupe"
        android:letterSpacing="-0.01"
        android:text="SMS 광고성 정보 수신동의(선택)"
        app:layout_constraintStart_toEndOf="@id/sign_up_first_check_third_iv"
        app:layout_constraintTop_toTopOf="@id/sign_up_first_check_third_iv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_first_check_third_iv"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/sign_up_first_agree_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_up_first_agree_third_tv"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_first_agree_third_tv"
        android:layout_marginEnd="33dp"/>

    <View
        android:id="@+id/writefirst_background_horizontalline_first_v"
        android:layout_width="348dp"
        android:layout_height="1dp"
        android:background="@color/light_peach"
        app:layout_constraintTop_toBottomOf="@id/sign_up_first_check_third_iv"
        app:layout_constraintStart_toStartOf="@id/sign_up_first_check_third_iv"
        app:layout_constraintEnd_toEndOf="@id/sign_up_first_agree_more_iv"
        android:layout_marginTop="15.5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_first_next_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/roundshape_button_sign_up_first"
        android:text="다음"
        android:textColor="@color/terracota"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="552dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sign_up_first_progress"
        app:layout_constraintTop_toBottomOf="@id/sign_up_first_next_button"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>











</androidx.constraintlayout.widget.ConstraintLayout>