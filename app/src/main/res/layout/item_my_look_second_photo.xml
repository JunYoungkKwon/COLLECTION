<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_my_look_second_photo_iv"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:background="@drawable/mylook_second_default"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/item_my_look_dim_background"
        android:layout_width="114dp"
        android:orientation="horizontal"
        android:layout_height="114dp"
        android:background="#70000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/item_my_look_second_photo_iv"
        app:layout_constraintStart_toStartOf="@+id/item_my_look_second_photo_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_my_look_second_photo_iv"
        app:layout_constraintBottom_toBottomOf="@+id/item_my_look_second_photo_iv"/>


    <TextView
        android:id="@+id/item_my_look_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr"
        android:textStyle="normal"
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/light_peach"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="3sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/item_my_look_second_photo_iv"
        app:layout_constraintBottom_toBottomOf="@+id/item_my_look_second_photo_iv"
        android:text="2022.01.27"/>

</androidx.constraintlayout.widget.ConstraintLayout>