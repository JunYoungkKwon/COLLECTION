        app:layout_constraintStart_toStartOf="parent"
        app:cv_monthHeaderResource="@layout/calendar_bs_year_month_header"
        app:cv_dayViewResource="@layout/calendar_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
