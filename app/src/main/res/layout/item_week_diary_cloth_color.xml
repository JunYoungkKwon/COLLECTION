<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="3dp"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/item_diary_color_iv"
        android:layout_width="6dp"
        android:layout_height="12dp"
        android:src="@drawable/item_color_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_diary_cloth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:layout_marginStart="4dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="-0.6sp"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@id/item_diary_color_iv"
        app:layout_constraintTop_toTopOf="@id/item_diary_color_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_diary_color_iv"
        tools:text="티셔츠" />

</androidx.constraintlayout.widget.ConstraintLayout>