<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/introduce_first_calender_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_calender_ic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="55dp"
        />

    <ImageView
        android:id="@+id/introduce_first_title_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_title_bg_iv"
        app:layout_constraintBottom_toBottomOf="@id/introduce_first_title_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/introduce_first_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_title_iv"
        app:layout_constraintTop_toBottomOf="@id/introduce_first_calender_ic"
        android:layout_marginTop="13.3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/introduce_first_ment_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_ment_iv"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/introduce_first_title_bg_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/introduce_first_image2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_image2_iv"
        app:layout_constraintBottom_toBottomOf="@id/introduce_first_image1_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ImageView
        android:id="@+id/introduce_first_image1_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_image1_iv"
        app:layout_constraintTop_toBottomOf="@id/introduce_first_ment_iv"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/introduce_first_image3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_image3_iv"
        app:layout_constraintTop_toBottomOf="@id/introduce_first_ment_iv"
        android:layout_marginTop="118dp"
        app:layout_constraintEnd_toEndOf="@id/introduce_first_ment_iv"
        android:layout_marginEnd="4dp"
        />

    <ImageView
        android:id="@+id/introduce_first_image4_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_image4_iv"
        app:layout_constraintTop_toBottomOf="@id/introduce_first_ment_iv"
        android:layout_marginTop="173dp"
        app:layout_constraintStart_toStartOf="@id/introduce_first_image2_iv"
        android:layout_marginStart="22dp"
        />

    <View
        android:id="@+id/introduce_line_v"
        android:layout_width="214dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/introduce_first_image1_iv"
        android:background="@color/terracota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>