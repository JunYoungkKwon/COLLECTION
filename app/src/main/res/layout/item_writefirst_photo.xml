<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/item_album_cover_img_cardView"
        android:layout_width="216dp"
        android:layout_height="216dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <ImageView
            android:id="@+id/item_writefirst_photo_bg_iv"
            android:layout_width="217dp"
            android:layout_height="217dp"
            android:background="@drawable/square_background_border_pinkishgery"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/item_writefirst_photo_img_iv"
            android:layout_width="216dp"
            android:layout_height="216dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!--<ImageView
            android:id="@+id/item_writefirst_photo_camera_iv"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="78dp"
            />-->

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>