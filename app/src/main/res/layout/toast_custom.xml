<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toast_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/toast_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/custom_toast_bg4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/toast_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suit_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="-13dp"
        app:layout_constraintTop_toTopOf="@+id/toast_bg_iv"
        app:layout_constraintStart_toStartOf="@+id/toast_bg_iv"
        app:layout_constraintBottom_toBottomOf="@+id/toast_bg_iv"
        app:layout_constraintEnd_toEndOf="@+id/toast_bg_iv"
        android:textColor="@color/dark_taupe"
        android:letterSpacing="-0.01"
        android:layout_gravity="center"
        android:text="Test"/>

</androidx.constraintlayout.widget.ConstraintLayout>