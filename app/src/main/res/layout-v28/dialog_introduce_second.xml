<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/introduce_v"
        android:layout_width="328dp"
        android:layout_height="512dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/roundshape_dialog_introduce_background"
        />

    <ImageView
        android:id="@+id/introduce_close_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_close_ic"
        app:layout_constraintTop_toTopOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        />

    <ImageView
        android:id="@+id/introduce_second_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_second_ic"
        app:layout_constraintBottom_toTopOf="@id/introduce_v"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        android:layout_marginBottom="18dp"
        />

    <ImageView
        android:id="@+id/introduce_second_calender_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/introduce_second_calender_ic"
        app:layout_constraintTop_toBottomOf="@id/introduce_close_ic"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/introduce_second_title_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_second_title_bg_iv"
        app:layout_constraintBottom_toBottomOf="@id/introduce_second_title_iv"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        />

    <ImageView
        android:id="@+id/introduce_second_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_second_title_iv"
        app:layout_constraintTop_toBottomOf="@id/introduce_second_calender_ic"
        android:layout_marginTop="13.3dp"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        />

    <ImageView
        android:id="@+id/introduce_second_ment_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_second_ment_iv"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/introduce_second_title_bg_iv"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        />

    <ImageView
        android:id="@+id/introduce_second_image3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_second_image3_iv"
        app:layout_constraintBottom_toBottomOf="@id/introduce_second_image1_iv"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        />


    <ImageView
        android:id="@+id/introduce_second_image1_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_second_image1_iv"
        app:layout_constraintTop_toBottomOf="@id/introduce_second_ment_iv"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        />

    <ImageView
        android:id="@+id/introduce_second_image2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_second_image2_iv"
        app:layout_constraintTop_toBottomOf="@id/introduce_second_ment_iv"
        android:layout_marginTop="125dp"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        />



    <View
        android:id="@+id/introduce_line_v"
        android:layout_width="214dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/introduce_second_image1_iv"
        android:background="@color/terracota"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        />

    <ImageView
        android:id="@+id/introduce_previous_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_previous_ic"
        android:layout_marginTop="337dp"
        app:layout_constraintTop_toTopOf="@id/introduce_v"
        app:layout_constraintStart_toStartOf="@id/introduce_v"
        />

    <ImageView
        android:id="@+id/introduce_next_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_introduce_first_next_ic"
        android:layout_marginTop="337dp"
        app:layout_constraintTop_toTopOf="@id/introduce_v"
        app:layout_constraintEnd_toEndOf="@id/introduce_v"
        />

</androidx.constraintlayout.widget.ConstraintLayout>