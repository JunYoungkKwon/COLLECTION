<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/refresh_v"
        android:layout_width="296dp"
        android:layout_height="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/roundshape_add_tag_popup_background"
        />

    <ImageView
        android:id="@+id/refresh_dialog_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refresh_dialog_ic"
        app:layout_constraintStart_toStartOf="@id/refresh_v"
        app:layout_constraintEnd_toEndOf="@id/refresh_v"
        app:layout_constraintTop_toTopOf="@id/refresh_v"
        android:layout_marginTop="32dp"
        />

    <ImageView
        android:id="@+id/refresh_dialog_text_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refresh_dialog_text_iv"
        app:layout_constraintStart_toStartOf="@id/refresh_v"
        app:layout_constraintEnd_toEndOf="@id/refresh_v"
        app:layout_constraintTop_toBottomOf="@id/refresh_dialog_ic"
        android:layout_marginTop="8dp"
        />

    <ImageButton
        android:id="@+id/refresh_dialog_ok_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logout_ok_btn_event"
        android:background="@color/transparent"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@+id/refresh_v"
        app:layout_constraintEnd_toEndOf="@+id/refresh_v"
        app:layout_constraintTop_toBottomOf="@+id/refresh_dialog_text_iv"
        android:layout_marginTop="14dp"
        />

    <ImageButton
        android:id="@+id/refresh_dialog_cancel_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:src="@drawable/logout_cancle_btn_event"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="@+id/refresh_v"
        app:layout_constraintEnd_toEndOf="@+id/refresh_v"
        app:layout_constraintTop_toBottomOf="@+id/refresh_dialog_ok_ib"
        android:layout_marginTop="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>