<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_text_bg_cv"
        android:layout_width="168dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <View
            android:id="@+id/dialog_text_bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </View>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/dialog_text1_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/dark_taupe"
        android:letterSpacing="-0.01"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="@+id/dialog_text_bg_cv"
        app:layout_constraintStart_toStartOf="@+id/dialog_text_bg_cv"
        app:layout_constraintEnd_toEndOf="@+id/dialog_text_bg_cv"
        android:text="@string/dialog_text3"/>

    <View
        android:id="@+id/dialog_hori_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_text1_tv"
        app:layout_constraintStart_toStartOf="@+id/dialog_text_bg_cv"
        app:layout_constraintEnd_toEndOf="@+id/dialog_text_bg_cv"
        android:background="@color/pinkish_grey">
    </View>

    <TextView
        android:id="@+id/dialog_text2_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/dark_taupe"
        android:letterSpacing="-0.01"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/dialog_text1_tv"
        app:layout_constraintStart_toStartOf="@+id/dialog_text_bg_cv"
        app:layout_constraintEnd_toEndOf="@+id/dialog_text_bg_cv"
        android:text="@string/dialog_text4"/>

